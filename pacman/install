_add_user() {
    getent group $1 >/dev/null || /usr/sbin/useradd -r -s /bin/false -g $2 $1
}

## arg 1:  the new package version
pre_install() {
    _add_user pybrew 99
}

## arg 1:  the new package version
post_install() {
  chown -R pybrew:pybrew /etc/pybrew
}

## arg 1:  the old package version
post_remove() {
  userdel pybrew
}

